<%- include('partials/header-signed-in') -%>


    <body class="d-flex flex-column min-vh-100">
        <div class="main container-xxl row justify-content-center mb-5 mx-auto">
            <h1 class="pb-4 text-center">Explore <%= request %> </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb d-flex justify-content-center">
                    <li class="breadcrumb-item"><a href="/feed">Feed</a></li>
                    <li class="breadcrumb-item"><a href="/categories">Explore Categories</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= request %></li>
                </ol>
            </nav>
            <section class="post-container row justify-content-center">
                <ul class="row list-unstyled m-0 p-0">
                  <% for(var i=0; i<recipes.length; i++) {%>
                    <li class="col-12 col-md-6 col-lg-4 mt-3 mb-2">
                      <div class="recipe-card rounded shadow dm-dark-container">
                        <div class="post-img-container">
                          <a class="feed-link" href="/recipe/<%= recipes[i]._id%>">
                            <img class="post-img rounded" src="<%= recipes[i].image%>">
                          </a>
                          <a href="/profile/<%=recipes[i].user.userName%>"><img class="post-prof-img dm-container" src="<%= recipes[i].user.image%>"></a>
                        </div>
                        <div class="post-details">
                          <h2 class="recipe-title h4" >
                            <%= recipes[i].title %>
                          </h2>
                          <p class="recipe-desc h6">
                            <%= recipes[i].caption %>
                          </p>
                          <a class="feed-link text-decoration-none h5 d-block" href="/recipe/<%= recipes[i]._id%>"> View Recipe </a>
                        </div>
                      </div>
                    </li>
                    <% } %>
                </ul>
              </section>
        </div>


        <%- include('partials/footer') -%>