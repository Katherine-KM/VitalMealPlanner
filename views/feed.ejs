<%- include('partials/header-signed-in') -%>

  <body class="d-flex flex-column min-vh-100">
    <div class="container">
      <!-- <form id="recipe-search-form">
      <input type="text" placeholder="Search">
      <button type="submit">Submit</button>
    </form> -->

      <!-- Categories -->

      <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-6 g-2 g-lg g-lg-3 py-4 mb-5">
        <% if(categories !='' ) { %>
          <% categories.forEach(function(category,index) { %>
            <a href="/categories/<%- category.name%>" class="col text-center category__link">
              <div class="category__img shadow">
                <img src="<%- category.image %>" alt="<%- category.name %>" loading="lazy">
              </div>
              <div class="pt-1">
                <%- category.displayName %>
              </div>
            </a>
            <% }) %>
              <% } %>
                <a href="/categories" class="col text-center category__link">
                  <div class="category__img shadow">
                    <img src="../imgs/login-page-sm.jpg" alt="See All Categories" loading="lazy">
                  </div>
                  <div class="pt-1">View All</div>
                </a>
      </div>

      <!-- Posts -->

      <section class="post-container row justify-content-center mb-5">
        <ul class="row list-unstyled m-0 p-0">
          <% for(var i=0; i<recipes.length; i++) {%>
            <li class="col-12 col-sm-4 mb-2">
              <div class="rounded shadow dm-dark-container">
                <div class="post-img-container w-100">
                  <a class="feed-link" href="/recipe/<%= recipes[i]._id%>">
                    <img class="post-img w-100 h-100 rounded" src="<%= recipes[i].image%>">
                  </a>
                  <img class="post-prof-img" src="<%= recipes[i].user.image%>">
                </div>
                <div class="post-details">
                  <h2>
                    <%= recipes[i].title %>
                  </h2>
                  <p>
                    <%= recipes[i].caption %>
                  </p>
                  <a class="feed-link text-decoration-none" href="/recipe/<%= recipes[i]._id%>"> View Recipe </a>
                </div>
              </div>
            </li>
            <% } %>
        </ul>
      </section>
      <!-- <div class="row justify-content-center mt-5" id="edamam">
    
  </div> -->
    </div>
    </section>
    </div>

    <%- include('partials/footer') -%>