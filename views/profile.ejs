<%- include('partials/header-signed-in') -%>

    <body class="d-flex flex-column min-vh-100">

        <div class="container">
            <section class="user-info-container w-100">
                <div class="bg-img-container">
                    <img class="bg-img" src="" alt="">
                </div>
                <div class="user-prof-img-container">
                    <img src="<%= user.image %>" alt="Profile Image" class="user-prof-img">
                </div>
                <div class="user-details">
                    <div class="username"></div>
                    <div class="bio"></div>
                </div>
            </section>
            <section class="prof-nav">
                <ul class="list-unstyled row">
                    <li class="col-4"><button class="btn btn-primary">My Recipes</button></li>
                    <li class="col-4"><button class="btn btn-primary">My Favorites</button></li>
                    <li class="col-4"><a href="/favorites" class="prof-nav-link edit-prof-btn btn btn-primary">Edit
                            Profile</a></li>
                </ul>
            </section>

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target=".bd-example-modal-lg">
                Edit Profile
            </button>

            <!-- Modal -->
            <div class="modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                    <div class="modal-content dm-dark-container">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Edit Profile</h5>
                            <button type="button" class="close dm-dark-container border-0 h4" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary dm-dark-container" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


