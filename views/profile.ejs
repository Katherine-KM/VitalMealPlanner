<%- include('partials/header-signed-in') -%>

    <body class="d-flex flex-column min-vh-100">

        <div class="container">
            <section class="user-info-container w-100">
                <div class="bg-img-container">
                    <img class="bg-img" src="" alt="">
                </div>
                <div class="user-prof-img-container">
                    <img src="<%=userProf[0].image%>" alt="Profile Image" class="user-prof-img">
                </div>
                <div class="user-details">
                    <div class="displayName"><%=userProf[0].displayName%></div>
                    <div class="bio"> <%=userProf[0].profBio%></div>
                </div>
            </section>
            <section class="prof-nav">
                <ul class="list-unstyled row">
                    <li class="col-4"><button class="btn btn-primary">Recipes</button></li>
                    <li class="col-4"><button class="btn btn-primary">Favorites</button></li>
                    <% if(userProf[0].id===user.id){ %>
                        <!-- Button trigger modal -->
                    <li class="col-4">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target=".bd-example-modal-lg">
                            Edit Profile
                        </button>
                    </li>
                        <!-- Modal -->
                        <div class="modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                <div class="modal-content dm-dark-container">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Edit Profile</h5>
                                        <button type="button" class="close dm-dark-container border-0 h4"
                                            data-bs-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/profile/editProfile/<%= user.id %>" enctype="multipart/form-data" method="POST" class="d-flex flex-column align-items-center">
                                            <div class="edit-user-imgs-container position-relative">
                                                <img class="edit-user-prof-img" src="<%=user.image%>" alt="">
                                                
                                                <label for="imageUpload" class="form-label">
                                                    <i class="fas fa fa-camera icon-btn"></i>
                                                    <input type="file" class="form-control-file d-none" id="imageUpload" name="file">
                                                </label>
                                            </div>
                                            <div class="col-6">
                                                <div class="mb-3">
                                                    <label for="displayName" class="form-label">Name</label>
                                                    <input type="text" class="form-control" id="displayName" name="displayName">
                                                  </div>
                                                  <div class="mb-3">
                                                    <label for="profBio" class="form-label">Bio</label>
                                                    <textarea class="form-control" id="profBio" name="profBio"></textarea>
                                                  </div>
                                            </div> 
                                            <div class=""> 
                                            <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
                                            </div> 
                                        </form>
                                    </div>
                                    <div class="modal-footer mb-5 p-0">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </ul>
            </section>
        </div>


        <ul class="row list-unstyled">
            <% for(let i=0; i < recipes.length; i++) { %>
                <li class="col-12 col-md-6 col-lg-4 mb-2 mt-3">
                    <div class="recipe-card rounded shadow dm-dark-container">
                        <div class="post-img-container">
                            <a class="feed-link" href="/recipe/<%= recipes[i]._id%>">
                                <img class="post-img rounded" src="<%= recipes[i].image%>">
                            </a>
                        </div>
                        <div class="post-details">
                            <h2 class="recipe-title h4">
                                <%= recipes[i].title %>
                            </h2>
                            <p class="recipe-desc h6">
                                <%= recipes[i].caption %>
                            </p>
                            <a class="feed-link text-decoration-none h5 d-block" href="/recipe/<%= recipes[i]._id%>">
                                View Recipe </a>
                        </div>
                    </div>
                </li>
                <% } %>
        </ul>

        <div class="row justify-content-center mt-5 d-none">
            <ul class="row list-unstyled">
                <% for(let i=0; i <favRecipes.length; i++) {%>
                    <li class="col-6 justify-content-between mt-5">
                        <a href="/recipe/<%= favRecipes[i]._id%>">
                            <img class="img-fluid" src="<%= favRecipes[i].image%>" alt="favRecipes[i].title">
                        </a>
                    </li>
                    <% } %>
            </ul>
        </div>

        <%- include('partials/footer') -%>