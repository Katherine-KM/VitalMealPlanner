<%- include('partials/header-signed-in') -%>

    <body class="d-flex flex-column min-vh-100">

        <div class="container">
            <section class="user-info-container w-100">
                <div class="bg-img-container">
                    <img class="bg-img" src="" alt="">
                </div>
                <div class="user-prof-img-container">
                    <img src="<%= user.image %>" alt="Profile Image" class="user-prof-img">
                </div>
                <div class="user-details">
                    <div class="username"></div>
                    <div class="bio"></div>
                </div>
            </section>
            <section class="prof-nav">
                <ul class="list-unstyled row">
                    <li class="col-4"><button class="btn btn-primary">My Recipes</button></li>
                    <li class="col-4"><button class="btn btn-primary">My Favorites</button></li>
                    <li class="col-4"><a href="/favorites" class="prof-nav-link btn btn-primary">Edit Profile</a></li>
                </ul>
            </section>

        </div>


        <ul class="row list-unstyled">
            <% for(let i=0; i < recipes.length; i++) { %>
                <li class="col-12 col-md-6 col-lg-4 mb-2 mt-3">
                    <div class="recipe-card rounded shadow dm-dark-container">
                      <div class="post-img-container">
                        <a class="feed-link" href="/recipe/<%= recipes[i]._id%>">
                          <img class="post-img rounded" src="<%= recipes[i].image%>">
                        </a>
                      </div>
                      <div class="post-details">
                        <h2 class="recipe-title h4" >
                          <%= recipes[i].title %>
                        </h2>
                        <p class="recipe-desc h6">
                          <%= recipes[i].caption %>
                        </p>
                        <a class="feed-link text-decoration-none h5 d-block" href="/recipe/<%= recipes[i]._id%>"> View Recipe </a>
                      </div>
                    </div>
                  </li>
                <% } %>
        </ul>

        <div class="row justify-content-center mt-5 d-none">
            <ul class="row list-unstyled">
                <% for(let i=0; i <favRecipes.length; i++) {%>
                    <li class="col-6 justify-content-between mt-5">
                        <a href="/recipe/<%= favRecipes[i]._id%>">
                            <img class="img-fluid" src="<%= favRecipes[i].image%>" alt="favRecipes[i].title">
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>

        <form action="/profile/profileimage/<%= user.id %>" enctype="multipart/form-data" method="POST">
            <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
            </div>
            <button type="submit" class="btn btn-primary mb-3" value="Upload">Submit</button>
        </form>
        <%- include('partials/footer') -%>